@model Rocky_Models.Category

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3" >Добавление категорий</h2>
        </div>

        <div class="row mt-2">
            <div class="col-8">
                <div class="form-group row m-2">
                    <div class="col-4">
                        <label asp-for="Name">Наименование</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row m-2">
                    <div class="col-4">
                        <label asp-for="DisplayOrder">Номер позиций</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Создать" />
                        </div>

                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-success">К списку...</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>


@section Scripts{ 
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
}