@model Rocky_Models.Category

<form method="post" asp-action="DeleteConfirmed">
    
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Удаление категорий</h2>
        </div>
        <input asp-for="Id" hidden />
        <div class="row mt-3">
            <div class="col-8">
                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="Name">Наименование</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" disabled value="@Model.Name" />
                    </div>
                </div>

                <div class="form-group row mt-2">
                    <div class="col-4">
                        <label asp-for="DisplayOrder">Номер позиций</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" disabled value="@Model.DisplayOrder" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row mt-3">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Удаление" />
                        </div>

                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-success">Ксписку</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}