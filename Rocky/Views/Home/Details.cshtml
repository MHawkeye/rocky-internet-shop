@model Rocky_Models.ViewModels.DetailsVM
@using Rocky_Utility 
    <form method="post">
        <div class="container align-items-center">
            <input asp-for="@Model.Product.Id" hidden /> 
            <div class="col-8 text-center">
                <div class="card">
                    <h5 class="card-header">
                        <span class="float-left">@Model.Product.Name</span> 
                        <span class="float-right">$ @Model.Product.Price</span></h5>
                    <div class="card-body">
                        <img src="@Rocky_Utility.WC.ImagePath@Model.Product.Image" class="w-50 card-img" />
                        <h5 class="card-title p-2">@Html.Raw(@Model.Product.Description)</h5>
                        @if (User.IsInRole(WC.AdminRole))
                        {
                            @if (Model.ExistsInCart)
                            {
                                <input asp-for="@Model.Product.TempSqFt" disabled class="form-control m-3" />
                            }
                            else {
                                <input asp-for="@Model.Product.TempSqFt" class="form-control m-3" />
                            }
                        }

                        <a asp-action="Index" class="btn btn-secondary ">К списку</a>

                        @if (Model.ExistsInCart)
                        {
                            <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-danger">Удалить из списка</a>
                        }
                        else
                        {
                            <button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-info">Добавить покупку</button>
                        }
                    </div>
                </div>
                <br />
            </div>
        </div>
    </form>